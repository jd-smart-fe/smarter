{
  "env": {
      "browser": false,
      "commonjs": true,
      "es6": true,
      "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "class-methods-use-this": 0,
    "global-require": 0,
    "prefer-template": 0,
    "prefer-destructuring": ["error", {
        "array": false,
        "object": true
    }],
    "no-unused-vars": 1,
    "no-underscore-dangle": 0,
    "no-use-before-define": ["error", {
      "functions": false,
      "classes": false
    }],
    "import/imports-first": 0,
    "import/no-dynamic-require": 0
  }
}
